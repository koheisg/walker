<html>
  <head>
    <title>Walker</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= yield(:ogp) %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <!-- Google Tag Manager -->
