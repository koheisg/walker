<div id="<%= dom_id feed %>">
  <p class="my-5">
    <strong class="block mb-1 font-medium">Name:</strong>
    <%= feed.name %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Default:</strong>
    <%= feed.default %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Archive:</strong>
    <%= feed.archive %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">URL:</strong>
    <%= feed.url %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this feed", [:admin, feed], class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this feed', edit_admin_feed_path(feed), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
