<%= turbo_stream.append(:items) do %>
  <%= render partial: 'items/item', collection: @page.records, formats: :html %>
<% end %>

<%= turbo_stream.replace(:paginate_link) do %>
  <%= turbo_frame_tag "paginate_link" do %>
    <% if @page.last? %>
      No more pages!
    <% else %>
      <%= button_to "Next page", feed_path(format: 'turbo_stream', page: @page.next_param), method: :get %>
    <% end %>
  <% end %>
<% end %>
