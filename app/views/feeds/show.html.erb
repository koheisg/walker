<p id="notice"><%= notice %></p>

<div class='mb-5 flex flex-col'>
  <div class='flex'>
    <div><strong>Name:</strong></div>
    <div><%= @feed.name %></div>
  </div>
  <div class='flex'>
    <div><strong>Url:</strong></div>
    <div><%= @feed.url %></div>
  </div>
</div>

<div class='mb-5 flex'>
  <%= link_to 'Edit', edit_feed_path(@feed) %> |
  <%= link_to 'Back', feeds_path %>
</div>


<div class='mb-5 flex flex-col'>
  <%= turbo_frame_tag "items" do %>
    <%= render @page.records %>
  <% end %>
</div>

<%= turbo_frame_tag "paginate_link" do %>
  <% if @page.last? %>
    No more pages!
  <% else %>
    <%= button_to "Next page", feed_path(format: 'turbo_stream', page: @page.next_param), method: :get %>
  <% end %>
<% end %>
