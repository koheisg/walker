<div class='bg-white overflow-hidden rounded-lg shadow my-5'>
  <%= link_to item.link, title: item.title, class: 'text-gray-900 hover:underline visited:text-gray-500', target: '_blank' do %>
    <% if item.item_ogp %>
      <div class="bg-white">
        <div class="flex flex-col">
          <div class="flex-shrink-0">
            <% if item.item_ogp.image %>
              <%= image_tag item.item_ogp.image, class: 'object-cover max-h-64 w-full' %>
            <% else %>
              <%= image_tag ogp_url(format: :png, text: item.item_ogp.description || item.title), class: 'object-cover max-h-64 w-full' %>
            <% end %>
          </div>
          <div class="px-4 pt-5 sm:px-6">
            <p class="text-sm font-medium"><%= item.title %></p>
            <p class="text-sm text-gray-500"><%= item.item_ogp.description %></p>
          </div>
          <div class="px-4 pt-5 sm:px-6">
            <p class="text-xs text-gray-500"><%= sanitize item.description %></p>
          </div>
          <div class="px-4 py-5 sm:px-6 w-full flex justify-end">
            <div class='mr-auto'>
            <p class="text-sm text-gray-500"><%= item.feed.name %> ï½¥ <%= time_ago_in_words item.created_at %> ago</p>
            </div>
            <div class='ml-auto'>
              <button type="button" class="-m-2 p-2 rounded-full flex items-center text-gray-400 hover:text-gray-600" id="menu-0-button" aria-expanded="false" aria-haspopup="true">
                <span class="sr-only">Open options</span>
                <!-- Heroicon name: solid/dots-vertical -->
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <div class="bg-white px-4 py-5 sm:px-6">
        <div class="flex space-x-4">
          <div class="flex-shrink-0">
            <svg class="h-10 w-10 rounded" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.26 13a2 2 0 0 1 .01-2.01A3 3 0 0 0 9 5H5a3 3 0 0 0 0 6h.08a6.06 6.06 0 0 0 0 2H5A5 5 0 0 1 5 3h4a5 5 0 0 1 .26 10zm1.48-6a2 2 0 0 1-.01 2.01A3 3 0 0 0 11 15h4a3 3 0 0 0 0-6h-.08a6.06 6.06 0 0 0 0-2H15a5 5 0 0 1 0 10h-4a5 5 0 0 1-.26-10z"></path></svg>
          </div>
          <div class="min-w-0 flex-1">
            <p class="text-sm font-medium"><%= item.title %></p>
            <p class="text-sm text-gray-500"><%= sanitize item.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
