<div class="flex items-center mb-2 overflow-y-auto border-b-4 border-gray-300 space-x-2 whitespace-nowrap">
  <% if daily_path == request.path %>
    <%= link_to daily_path, class: 'rounded-t-lg px-2 py-1.5 font-medium text-gray-800 bg-gray-300' do %>
        <span class="truncate">
          <%= t('all') %>
        </span>
    <% end %>
  <% else %>
    <%= link_to daily_path, class: 'rounded-t-lg px-2 py-1.5 text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 capitalize text-gray-500 bg-gray-200' do %>
        <span class="truncate">
          <%= t('all') %>
        </span>
    <% end %>
  <% end %>

  <% default_feed_groups.each do |feed_group| %>
    <% if current_feed_group == feed_group %>
      <%= link_to feed_group_daily_path(feed_group), class: 'rounded-t-lg px-2 py-1.5 font-medium text-gray-800 bg-gray-300' do %>
          <span class="truncate">
            <%= feed_group.name %>
          </span>
      <% end %>
    <% else %>
      <%= link_to feed_group_daily_path(feed_group), class: 'rounded-t-lg px-2 py-1.5 text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 capitalize text-gray-500 bg-gray-200' do %>
          <span class="truncate">
            <%= feed_group.name %>
          </span>
      <% end %>
    <% end %>
  <% end %>
</div>

<% unless daily_path == request.path %>
  <div class="flex items-center mb-2 overflow-y-auto border-b-4 border-gray-300 space-x-2 whitespace-nowrap">
    <% if feed_group_daily_path(current_feed_group) == request.path %>
      <%= button_to feed_group_daily_url(current_feed_group), method: 'get', class: 'rounded-t-lg px-2 py-1.5 font-medium text-gray-800 bg-gray-300' do %>
        <span class="truncate">
          <%= t('all') %>
        </span>
      <% end %>
    <% else %>
      <%= button_to feed_group_daily_url(current_feed_group), method: 'get', class: 'rounded-t-lg px-2 py-1.5 text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 capitalize text-gray-500 bg-gray-200' do %>
        <span class="truncate">
          <%= t('all') %>
        </span>
      <% end %>
    <% end %>
    <% current_feeds.each do |feed| %>
      <% if feed_group_feed_daily_path(current_feed_group, feed_id: feed) == request.path %>
        <%= button_to feed_group_feed_daily_url(current_feed_group, feed_id: feed), method: 'get', class: 'rounded-t-lg px-2 py-1.5 font-medium text-gray-800 bg-gray-300' do %>
          <span class="truncate">
            <%= feed.name %>
          </span>
        <% end %>
      <% else %>
        <%= button_to feed_group_feed_daily_url(current_feed_group, feed_id: feed), method: 'get', class: 'rounded-t-lg px-2 py-1.5 text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 capitalize text-gray-500 bg-gray-200' do %>
          <span class="truncate">
            <%= feed.name %>
          </span>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>
